                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("Create","SanPhams")" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Thêm sản phẩm</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("Index","LoaiSPs")" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Thể loại</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("Index","DanhMucs")" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Danh mục</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-camera-retro"></i>
                                <p>
                                    Media
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="@Url.Action("Media","Anhs")" class="nav-link">
                                        <i class="nav-icon far fa-circle nav-icon"></i>
                                        <p>Danh sách ảnh</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-address-card"></i>
                                <p>
                                    Quản lý người dùng
